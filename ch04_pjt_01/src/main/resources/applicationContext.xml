<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- InitSampleData 빈 이름: initSampleData-->
<bean id="initSampleData" class="spring5.ems.member.util.InitSampleData">
    <property name="sNums"> <!-- set() 메서드를 호출하여 값을 주입하는 역할 -->
        <array> <!-- 배열 형태의 파라미터 -->
            <value>hbs001</value>
            <value>hbs002</value>
            <value>hbs003</value>
            <value>hbs004</value>
            <value>hbs005</value>
        </array>
    </property>
    <property name="sIds">
        <array>
            <value>rabbit</value>
            <value>hippo</value>
            <value>raccoon</value>
            <value>elephant</value>
            <value>lion</value>
        </array>
    </property>
    <property name="sPws">
        <array>
            <value>p0001</value>
            <value>p0002</value>
            <value>p0003</value>
            <value>p0004</value>
            <value>p0005</value>
        </array>
    </property>
    <property name="sNames">
        <array>
            <value>agatha</value>
            <value>barbara</value>
            <value>chris</value>
            <value>doris</value>
            <value>elva</value>
        </array>
    </property>
    <property name="sAges">
        <array>
            <value>19</value>
            <value>22</value>
            <value>20</value>
            <value>27</value>
            <value>19</value>
        </array>
    </property>
    <property name="sGenders">
        <array>
            <value>M</value>
            <value>W</value>
            <value>W</value>
            <value>M</value>
            <value>M</value>
        </array>
    </property>
    <property name="sMajors">
        <array>
            <value>English</value>
            <value>Korean</value>
            <value>French</value>
            <value>Philosophy</value>
            <value>History</value>
        </array>
    </property>
</bean>

    <!-- StudentDao studentDao = new spring.ems.member.dao.StudentDao(); 라는 의미 -->
    <bean id="studentDao" class="spring5.ems.member.dao.StudentDao" />
    <!-- StudentRegisterService 빈 생성 -->
    <bean id="studentRegisterService" class="spring5.ems.member.service.StudentRegisterService">
        <constructor-arg ref="studentDao" /> <!-- 위에서 생성한 studentDao 빈 객체를 인자로 넘김 -->
    </bean>
    <!-- StudentAllSelectService 빈 생성 -->
    <bean id="studentAllSelectService" class="spring5.ems.member.service.StudentAllSelectService">
        <constructor-arg ref="studentDao" />
    </bean>
    <bean id="studentSelectService" class="spring5.ems.member.service.StudentSelectService">
        <constructor-arg ref="studentDao" />
    </bean>
    <bean id="printStudentInformationService" class="spring5.ems.member.service.PrintStudentInformationService">
        <constructor-arg ref="studentSelectService"/>
    </bean>
</beans>